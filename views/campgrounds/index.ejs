<% include ../partials/header.ejs %>

<div class="container">
	<div class="jumbotron">
		<div class = container>
			<h1> Welcome to the BestTrip
					<% if(currentUser){ %>
						<%= currentUser.username %>
					<% } %>
				!</h1>
			<p>Check out our trips!</p>
			<p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Trip</a></p>
			<ul>
				<h2>Features of the site:</h2>
				<li>Responsiveness ready</li>
				<li>Register and Login</li>
				<li>Add/Edit/Delete (only your own) Trip</li>
				<li>Add/Edit/Delete your comments</li>
				<li>Google maps API (shows map of the location name)</li>
				<li>Shows the date when the content were added</li>
				<li>Bootstrap 4</li>
			</ul>
		</div>
	</div>		
	<div class="row text-center camps">
			<% campgrounds.forEach(function(campground){ %>
			<div class="col-lg-3 col-md-4 col-sm-6 mb-4">
				<div class="card">
					<img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.name %>">
					<div class="card-body">
						<h5 class="card-title"><%= campground.name %></h5>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
					</div>
				</div>
			</div>
		<% }); %>
	</div>	
	<a href="/campgrounds">Back to landing</a>
</div>

<% include ../partials/footer.ejs %>

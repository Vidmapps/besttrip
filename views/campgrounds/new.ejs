<% include ../partials/header.ejs %>

<div class = container>
	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Create new Trip post</h1>
		</div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="Name">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="cost" placeholder="Cost" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="Image url">
				</div>
				<div class="form-group">
					<input class="form-control" type="textarea" name="description" placeholder="Description">
				</div>
				<div class="form-group">
						<label for="location">Location</label>
						<input class="form-control" type="text" name="location" id="location" placeholder="Vilnius">
					</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">View Trips</a>	
		</div>
	</div>
</div>




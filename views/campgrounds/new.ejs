<% include ../partials/header.ejs %>

<div class = container>
	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Create new Trip post</h1>
		</div>
		<div class="col-xs-12 col-md-6 col-lg-4">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<label for="name">Name</label>
					<input class="form-control" type="text" name="name" id="name" required placeholder="Name">
				</div>
				<div class="form-group">
					<label for="price">Price</label>
					<input class="form-control" type="number" name="price" id="price" placeholder="Price" required min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<label for="image">Image</label>
					<input class="form-control" type="text" name="image" id="image" required placeholder="Image url">
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<input class="form-control" type="textarea" name="description" id="description" required minlength='12' placeholder="Description">
				</div>
				<div class="form-group">
						<label for="location">Location</label>
						<input class="form-control" type="text" name="location" id="location" required placeholder="Vilnius">
					</div>
				<div class="form-group">
					<button class="btn btn-primary btn-lg btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">View Trips</a>	
		</div>
	</div>
</div>

